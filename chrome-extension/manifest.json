{
  "manifest_version": 3,
  "name": "LLM Notify Hub",
  "version": "2.0.0",
  "description": "Get notified when AI assistants finish responding - now with unified hub support",

  "permissions": [
    "notifications",
    "storage",
    "activeTab",
    "offscreen",
    "alarms",
    "scripting"
  ],

  "host_permissions": [
    "http://localhost:3847/*",
    "https://*/*",
    "http://*/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [],

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },

  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "commands": {
    "dismiss-alarm": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Dismiss active alarm"
    }
  }
}
